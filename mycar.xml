<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd">
           
	<bean class="springs_xml.Engine" id="e"></bean>
	<bean class="springs_xml.Car" id="c">
	<constructor-arg name="manufacturer" value="Payal"></constructor-arg>
	<constructor-arg name="cost" value="100000"></constructor-arg>
	<constructor-arg name="engine" ref="e"></constructor-arg>
	</bean>

</beans>